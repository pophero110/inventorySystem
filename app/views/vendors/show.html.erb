
<div class="pl-2 pr-2">
<%= link_to "back to vendors list", vendors_path, class: "btn btn-outline-secondary float-right mt-4 mb-2" %>


<h1 class="text-info"><%= @vendor.name %></h1>
<table class="table">
  <thead>
    <tr>
 
      <th scope="col">Contact</th>
      <th scope="col">Email</th>
      <th scope="col">Language Preference</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th ><%= @vendor.contact_number %></th>
      <th ><%= @vendor.email %></th>
      <th ><%= @vendor.language_preference %></th>
    </tr>
  </tbody>
</table>
<h2 class="text-secondary">Products</h1>
<table class="table table-striped table-bordered table-light">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Foreign Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <th scope="row"><%= product.name %></th>
      <th ><%= product.foreign_name %></th>
      <th ><%= product.quantity_in_total %></th>
      <th ><%= link_to product.category.name, category_path(product.category) %></th>
      <td>
      <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-info text-center " %>
    <%= link_to "Delete", product_path(product), class: "btn btn-outline-danger text-center ", method: :delete, data: { confirm: "Are you sure?" } %></td></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>


