
<div class="container">

<div class="row justify-content-center">
<div class="col-10">
<%= render "shared/errors", obj: @vendor %>
<%= form_with(model: @vendor, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
<div class="form-group row">
  <%= form.label :name, class: "col-2 col-form-label text-light" %>
  <div class="col-10">
   <%= form.text_field :name, class: "form-control shadow rounded" %>
  </div>
</div>


<div class="form-group row">
    <%= form.label :contact_number, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= form.number_field :contact_number, class: "form-control shadow rounded" %>
    </div>
  </div>
   <div class="form-group row">
    <%= form.label :email, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= form.email_field :email, class: "form-control shadow rounded" %>
    </div>
  </div>

    <div class="form-group row">
    <%= form.label :address, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= form.text_field :address, class: "form-control shadow rounded" %>
    </div>
  </div>

   <div class="form-group row">
    <%= form.label :language_preference, class: "col-2 col-form-label text-light" %>
    <div class="col-10 ">
        <%= form.select(:language_preference, options_for_select([["Chinese", "Chinese"], ["English", "English"]])) %>
    </div>
  </div>
  
 
 
<div class="form-group row justify-content-center">
    <%= form.submit class: "btn btn-outline-light btn-lg" %>
</div>
<% end %>
</div>
</div>

</div>
