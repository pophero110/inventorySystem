<div class="pl-2 pr-2">

<div class="d-flex justify-content-between align-items-center">
<h1>Vendors</h1>
<div class="d-flex ">
<%= link_to "New vendor", new_vendor_path, class: "btn btn-outline-info mr-2" %>
<%= link_to "Back to homepage", root_path, class: "btn btn-outline-secondary " %>
</div>
</div>




<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Product Count</th>
      <th scope="col">Updated Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @vendors.each do |vendor| %>
    <tr>
      <th scope="row"><%= link_to vendor.name, vendor_path(vendor), class: "text-success" %></th>
      <td><%= pluralize(vendor.products.count, "product") %></td>
      <td><%= vendor.updated_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to "Edit", edit_vendor_path(vendor), class: "btn btn-outline-info text-center btn-sm " %>
    <%= link_to "Delete", vendor_path(vendor), class: "btn btn-outline-danger text-center btn-sm ", method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

