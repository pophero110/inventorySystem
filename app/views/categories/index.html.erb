<div class="pl-2 pr-2">

<div class="d-flex justify-content-between align-items-center">
<h1>Categories</h1>
<div class="d-flex ">
<%= link_to "New category", new_category_path, class: "btn btn-outline-info mr-2" %>
<%= link_to "Back to homepage", root_path, class: "btn btn-outline-secondary" %>
</div>
</div>




<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Product Count</th>
      <th scope="col">Updated Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <th scope="row"><%= link_to category.name, category_path(category), class: "text-success" %></th>
      <td><%= pluralize(category.products.count, "product") %></td>
      <td><%= category.updated_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to "Edit", edit_category_path(category), class: "btn btn-outline-info text-center btn-sm " %>
    <%= link_to "Delete", category_path(category), class: "btn btn-outline-danger text-center btn-sm ", method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>






