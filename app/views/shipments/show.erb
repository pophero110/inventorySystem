
<div class="pl-2 pr-2">
<div class="d-flex justify-content-between
 align-items-center">
<h1>Date: <%= @shipment.created_at.strftime("%m/%d/%Y") %></h1>
<div class="d-flex ">
<% if !@shipment.is_received %>
<%= form_with(url: shipment_path(@shipment), method: "Patch") do %>
<%= submit_tag("Receive", class: "btn btn-warning mr-2", data: { confirm: "Are you sure?" }) %>
  <% end %>
  <% else %>
  <button class="btn btn-secondary mr-2" disabled>Received</button>
  <% end %>
 <%= form_with(url: shipment_path(@shipment), method: "Delete") do %>
<%= submit_tag("Delete", class: "btn btn-danger mr-2", data: { confirm: "Are you sure?" }) %>
<% end %>

<%= link_to "Back to orders", shipments_path, class: "btn btn-outline-secondary" %>
</div>


</div>
   <table class="table table-striped table-bordered table-light">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Foreign Name</th>
        <th scope="col">Quantity stock</th>
        <th scope="col">Quantity ordered</th>
        <th scope="col">correct?</th>
        
    </tr>
  </thead>
  <tbody>
  <% @shipment.products.each do |product| %>
    <tr>
      <td><%= Product.find(product[0]).name %></td>
      <td><%= Product.find(product[0]).foreign_name %></td>
      <td><%= Product.find(product[0]).quantity_in_total %></td>
      <td><%= product[1] %></td>
       <td scope="col"><input type="checkbox" style="width:30px; height:30px"></td>
    </tr>
    <% end %>
  </tbody>
</table>



</div>
</div>
