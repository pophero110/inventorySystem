

<!-- Modal -->
<div class="modal error-modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title " id="exampleModalLongTitle" >Not found: <p class="font-weight-light d-inline text-info"><%= @barcode %></p></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                 <div class="form-group text-center">
                    <small id="passwordHelpBlock" class="form-text text-muted">
                      Enter the barcode manually
                    </small>
                    <div class="row p-3">
                        <input type="text" autofocus class="form-control col-10 product_barcode" maxlength="13" id="formGroupExampleInput2">             
                        <button type="button" class="btn btn-primary col-2 search_product">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>