
<div class="pl-2 pr-2">
<div class="d-flex justify-content-between
 align-items-center">
<h1>Date: <%= @sale.date %></h1>
<div class="d-flex ">
<% if !@sale.is_confirm %>
<%= form_with(url: sale_path(@sale), method: "Patch") do %>
<%= submit_tag("Confirm", class: "btn btn-warning mr-2", data: { confirm: "Are you sure?" }) %>
  <% end %>
  <% else %>
  <button class="btn btn-secondary mr-2" disabled>Confirmed</button>
  <% end %>
 <%= form_with(url: sale_path(@sale), method: "Delete") do %>
<%= submit_tag("Delete", class: "btn btn-danger mr-2", data: { confirm: "Are you sure?" }) %>
<% end %>

<%= link_to "Back to sales", sales_path, class: "btn btn-outline-secondary" %>
</div>


</div>
   <table class="table table-striped table-bordered table-light">
  <thead>
    <tr>
      <th scope="col">Instance_Id</th>
      <th scope="col">Name</th>
      <th scope="col">Foreign Name</th>
        <th scope="col">Quantity Sold</th>
    </tr>
  </thead>
  <tbody>
  <% @sale.data.each do |product| %>
    <tr>
      <td><%= product[0] %></td>
      <td><%= product[2] %></td>
      <td><%= product[3] %></td>
      <td><%= product[4] %></td>
    </tr>
    <% end %>
  </tbody>
</table>



</div>
</div>
